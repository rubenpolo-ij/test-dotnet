@model Test.Model.Candidate
@{
    ViewData["Title"] = "Add Candidate";
}

<div>
    <form asp-controller="candidate" asp-action="create" method="post" class="mt-3">
        @Html.AntiForgeryToken()

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Surname" class="form-control" placeholder="Surname">
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Birthdate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Birthdate" asp-format="{0:yyyy-MM-dd}" class="form-control" placeholder="Birthdate"
                       data-val-required="The Birthdate field is required">
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>