@model Test.Model.Candidate
@{
    ViewData["Title"] = "Edit Candidate";
}
@Html.AntiForgeryToken()

<div>
    <form asp-controller="candidate" asp-action="edit" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input id="inputCandidateId" hidden asp-for="IdCandidate" />
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Surname" class="form-control" placeholder="Surname">
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Birthdate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Birthdate" asp-format="{0:yyyy-MM-dd}" class="form-control" placeholder="Birthdate"
                       data-val-required="The Birthdate field is required">
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>

        <br />

        <div class="">
            <h3 class="float-left">Experiences</h3>
            <a asp-controller="CandidateExperience" asp-action="Create" asp-route-idCandidate="@Model.IdCandidate" class="btn btn-success float-right">Add Experience</a>
        </div>
        <hr class="mt-5" />
        <div id="listContainer">

        </div>
    </form>
</div>


<div class="modal fade" id="confirmDeletionDialog" tabindex="-1" role="dialog" aria-labelledby="confirmDeletionDialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm experience deletetion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the experience?
            </div>
            <div class="modal-footer">
                <button id="confirmDelete" type="button" class="btn btn-primary">
                    <span class="d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span class="text-button">Yes</span>
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/candidate.experience.list.js" asp-append-version="true"></script>
}