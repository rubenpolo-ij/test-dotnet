@model List<Test.DotNet.Models.CandidateListViewModel>
@{
    ViewData["Title"] = "List Candidates";
}


<div>
    <div>
        <h2 class="float-left">Candidates</h2>
        <a asp-action="Create" class="btn btn-primary float-right"><i class="bi bi-person-plus-fill mr-2"></i>New Candidate</a>
    </div>
    <br />
    <table id="candidates" class="table mt-3">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Email</th>
                <th scope="col" class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>

<div class="modal fade" id="confirmDeletionDialog" tabindex="-1" role="dialog" aria-labelledby="confirmDeletionDialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm candidate deletetion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the candidate?
            </div>
            <div class="modal-footer">
                <button id="confirmDelete" type="button" class="btn btn-primary">
                    <span class="d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span class="text-button">Yes</span>
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/candidate.list.js" asp-append-version="true"></script>
}
