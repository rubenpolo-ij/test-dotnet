@model Test.Model.CandidateExperience
@{
    ViewData["Title"] = "Add Experience";
}

<div>
    <h2>New Experience</h2>

    <form asp-controller="candidateexperience" asp-action="create" method="post" class="mt-3">
        @Html.AntiForgeryToken()

        <input hidden asp-for="IdCandidate" />
        <div class="form-group row">
            <label asp-for="Company" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Company" class="form-control" placeholder="Company">
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Job" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Job" class="form-control" placeholder="Job">
                <span asp-validation-for="Job" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Salary" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Salary" class="form-control" placeholder="Salary">
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="BeginDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BeginDate" asp-format="{0:yyyy-MM-dd}" class="form-control" placeholder="BeginDate"
                       data-val-required="The BeginDate field is required">
                <span asp-validation-for="BeginDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="EndDate" asp-format="{0:yyyy-MM-dd}" class="form-control" placeholder="EndDate"
                       data-val-required="The EndDate field is required">
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea rows="5" cols="40" asp-for="Description" class="form-control" placeholder="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Candidate" asp-action="Edit" asp-route-id="@Model.IdCandidate" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>